{
  "name": "near-mpc-accounts",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node dist/near-mpc-accounts.js",
    "dev": "ts-node-dev --respawn --transpile-only src/cli.ts",
    "build": "rimraf ./dist && esbuild src/cli.ts --bundle --platform=node --outfile=dist/near-mpc-accounts.js && cp .env.example ./dist/ && chmod +x build_binaries.sh && ./build_binaries.sh",
    "lint": "eslint . --ext .ts"
  },
  "bunsan": {
    "routes": [
      {
        "path": "/generate-address",
        "method": "POST",
        "command": "generate-address",
        "description": "Generate a new address",
        "parameters": [
          {
            "name": "chain",
            "type": "string",
            "required": true,
            "description": "The blockchain to generate the address for",
            "source": "body"
          }
        ]
      },
      {
        "path": "/sign-payload",
        "method": "POST",
        "command": "sign-payload",
        "description": "Sign a payload using NEAR MPC",
        "parameters": [
          {
            "name": "payload",
            "type": "string",
            "required": true,
            "description": "The payload to sign (in hexadecimal)",
            "source": "body"
          }
        ]
      },
      {
        "path": "/help",
        "method": "GET",
        "command": "help",
        "description": "Show help information"
      }
    ]
  },
  "keywords": [],
  "author": "RonNakamoto",
  "license": "MIT",
  "description": "Bunsan extension that adds support for NEAR based MPC Account for multi-chain interactions",
  "devDependencies": {
    "@types/bn.js": "^5.1.6",
    "@types/elliptic": "^6.4.18",
    "@types/keccak": "^3.0.5",
    "@types/node": "^22.7.5",
    "esbuild": "^0.24.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "bech32": "^2.0.0",
    "bn.js": "^5.2.1",
    "bs58check": "^4.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "elliptic": "^6.5.7",
    "ethers": "^5.7.2",
    "hash.js": "^1.1.7",
    "keccak": "^3.0.4",
    "near-api-js": "^5.0.1",
    "smol-toml": "^1.3.0"
  }
}
