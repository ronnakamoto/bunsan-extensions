{
  "name": "near-mpc-accounts",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node dist/near-mpc-accounts.js",
    "dev": "ts-node-dev --respawn --transpile-only src/cli.ts",
    "build": "rimraf ./dist && esbuild src/cli.ts --bundle --platform=node --outfile=dist/near-mpc-accounts.js && cp .env.example ./dist/ && chmod +x build_binaries.sh && ./build_binaries.sh",
    "lint": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "bunsan": {
    "routes": [
      {
        "path": "/generate-address",
        "method": "POST",
        "command": "generate-address",
        "description": "Generate a new address",
        "parameters": [
          {
            "name": "chain",
            "type": "string",
            "required": true,
            "description": "The blockchain to generate the address for",
            "source": "body"
          },
          {
            "name": "index",
            "type": "number",
            "required": false,
            "description": "Index for path generation",
            "source": "body"
          },
          {
            "name": "json",
            "type": "boolean",
            "required": true,
            "description": "Output the result as JSON",
            "source": "body"
          }
        ]
      },
      {
        "path": "/sign-payload",
        "method": "POST",
        "command": "sign-payload",
        "description": "Sign a payload using NEAR MPC",
        "parameters": [
          {
            "name": "payload",
            "type": "string",
            "required": true,
            "description": "The payload to sign (in hexadecimal)",
            "source": "body"
          },
          {
            "name": "json",
            "type": "boolean",
            "required": true,
            "description": "Output the result as JSON",
            "source": "body"
          }
        ]
      },
      {
        "path": "/deploy-contract",
        "method": "POST",
        "command": "deploy-contract",
        "description": "Deploy a smart contract using NEAR MPC",
        "parameters": [
          {
            "name": "chain",
            "type": "string",
            "required": true,
            "description": "Chain to deploy to (e.g., ethereum, sepolia)",
            "source": "body"
          },
          {
            "name": "from",
            "type": "string",
            "required": true,
            "description": "Address to deploy from",
            "source": "body"
          },
          {
            "name": "bytecode",
            "type": "string",
            "required": true,
            "description": "Contract bytecode (hex string) or path to .bin file",
            "source": "body"
          },
          {
            "name": "abi",
            "type": "string",
            "required": true,
            "description": "Contract ABI (JSON string) or path to .json file",
            "source": "body"
          },
          {
            "name": "index",
            "type": "number",
            "required": false,
            "description": "Index for path generation",
            "source": "body"
          },
          {
            "name": "constructorArgs",
            "type": "array",
            "required": false,
            "description": "Constructor arguments",
            "source": "body"
          },
          {
            "name": "waitForConfirmation",
            "type": "boolean",
            "required": false,
            "default": true,
            "description": "Wait for deployment confirmation",
            "source": "body"
          },
          {
            "name": "json",
            "type": "boolean",
            "required": true,
            "default": true,
            "description": "Output the result as JSON",
            "source": "body"
          }
        ]
      },
      {
        "path": "/contract-call",
        "method": "POST",
        "command": "contract-call",
        "description": "Call a smart contract method using NEAR MPC",
        "parameters": [
          {
            "name": "chain",
            "type": "string",
            "required": true,
            "description": "Chain to call the contract on (e.g., ethereum, sepolia)",
            "source": "body"
          },
          {
            "name": "to",
            "type": "string",
            "required": true,
            "description": "Contract address",
            "source": "body"
          },
          {
            "name": "from",
            "type": "string",
            "required": true,
            "description": "From address",
            "source": "body"
          },
          {
            "name": "method",
            "type": "string",
            "required": true,
            "description": "Method name to call",
            "source": "body"
          },
          {
            "name": "abi",
            "type": "string",
            "required": true,
            "description": "Contract ABI (JSON string) or path to .json file",
            "source": "body"
          },
          {
            "name": "args",
            "type": "array",
            "required": false,
            "description": "Method arguments",
            "source": "body"
          },
          {
            "name": "index",
            "type": "number",
            "required": false,
            "description": "Index for path generation",
            "source": "body"
          },
          {
            "name": "value",
            "type": "string",
            "required": false,
            "description": "ETH value to send (in wei)",
            "source": "body"
          },
          {
            "name": "gasLimit",
            "type": "string",
            "required": false,
            "description": "Custom gas limit",
            "source": "body"
          },
          {
            "name": "json",
            "type": "boolean",
            "required": true,
            "default": true,
            "description": "Output the result as JSON",
            "source": "body"
          }
        ]
      },
      {
        "path": "/help",
        "method": "GET",
        "command": "help",
        "description": "Show help information"
      }
    ]
  },
  "keywords": [],
  "author": "RonNakamoto",
  "license": "MIT",
  "description": "Bunsan extension that adds support for NEAR based MPC Account for multi-chain interactions",
  "devDependencies": {
    "@types/bn.js": "^5.1.6",
    "@types/elliptic": "^6.4.18",
    "@types/keccak": "^3.0.5",
    "@types/node": "^22.7.7",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "bech32": "^2.0.0",
    "bitcoinjs-lib": "^7.0.0-rc.0",
    "bn.js": "^5.2.1",
    "bs58check": "^4.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "elliptic": "^6.5.7",
    "ethers": "^5.7.2",
    "hash.js": "^1.1.7",
    "keccak": "^3.0.4",
    "near-api-js": "^5.0.1",
    "smol-toml": "^1.3.0",
    "viem": "^2.21.32"
  }
}
